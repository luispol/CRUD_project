  </nav>

    <!--Contenedor donde se va a mostrar el formulario para agregar un nuevo usuario
    todo vinculado con clases respectivas de Boostrap-->
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-heder">Nuevo Registro</div>
            <div class="card-body">
                <!--Formulario de registro del nuevo usuario con el método POST de envio y lo guardaremos con la acción-->
                <form action="/save" method="POST">
                    <!--Parte correspondiente para el nombre del nuevo usuario -->
                    <div class="mb-3">
                        <label for="user" class="form-label">Usuario</label>
                        <input type="text"  class="form-control" name="user" id="user" tabindex="1">
                    </div>
                    <!--Parte correspondiente para los apellidos del nuevo usuario -->
                    <div class="mb-3">
                        <label for="apellidos" class="form-label">Apellidos</label>
                        <input type="text"  class="form-control" name="apellidos" id="apellidos">
                    </div>
                    <!--Parte correspondiente para el rol del nuevo usuario -->
                    <div class="mb-3">
                        <label for="user" class="form-label">Rol</label>
                        <select name="rol" id="rol" class="form-select">
                            <option value="admin" selected>Admin</option>
                            <option value="usuario">Usuario</option>
                        </select>
                    </div>
                    <!--Parte correspondiente para el correo del nuevo usuario -->
                    <div class="mb-3">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="text"  class="form-control" name="correo" id="correo">
                    </div>
                    <!--Parte correspondiente para el botón de de creació del nuevo usuario-->
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <!--Parte correspondiente para el botón de cancelar la creación del nuevo usuario y 
                    que lo reenvié a la raíz-->
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>

</html>