<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--Link que hace referencia a Boostrap por medio de cdn-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!--Link para usar el CDN de boxicons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>CRUD</title>
  </head>
  <body>
    <!--Barra de navegación-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="navbar-brand">
              <a class="nav-link" href="#">Inicio</a>
            </li>
            <li class="navbar-brand">
              <a class="nav-link" aria-current="page" href="#">Nosotros</a>
            </li>
            <li class="navbar-brand">
              <a class="nav-link active" href="#">Mantenimiento</a>
            </li>
            <li class="navbar-brand">
              <a class="nav-link" href="#" aria-disabled="true">Contáctanos</a>
            </li>
          </ul>
        </div>
      </div>
  </nav>
    <!--Si capturamos el registros, se mostrarán los datos-->
    <% if (user) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-heder">Editar Registro</div>
            <div class="card-body">
              <!--Le especificamos que la acción de nuestro formulario será update-->
                <form action="/update" method="POST">
                    <!--Creamos un input oculto, esto para poder capturar el id-->
                    <input id="id" name="id" value="<%= user.id %>" hidden>
                    <div class="mb-3">
                        <label for="user" class="form-label">Usuario</label>
                        <input type="text"  class="form-control" name="user" id="user" value="<%= user.nombres %>">
                    </div>
                    <div class="mb-3">
                        <label for="apellidos" class="form-label">Apellidos</label>
                        <input type="text"  class="form-control" name="apellidos" id="apellidos" value="<%= user.apellidos %>">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Rol</label>
                        <select name="rol" id="rol" class="form-select">
                          <!--Utilizamos un operador ternario para poder seleccionar el rol indicado
                          si es igual a admin, la seleccionará de lo contrario lo dejará en vacío-->
                            <option <%= user.rol=='admin' ? "selected" : '' %> value="admin" >Admin</option>
                            <!--Utilizamos un operador ternario para poder seleccionar el rol indicado
                          si es igual a usuario, la seleccionará de lo contrario lo dejará en vacío-->
                            <option <%= user.rol=='usuario' ? "selected" : '' %> value="usuario">Usuario</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="text"  class="form-control" name="correo" id="correo" value="<%= user.correo %>" >
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>

    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>

</html>